{% extends 'base.html.twig' %}
{% block title %}Discord Webhooks{% endblock %}
{% block headline %}Discord Webhooks{% endblock %}
{% block body %}

    <div class="content-section">
        <div class="container">
            <h2>
                {% if edit is defined %}
                    Edit a Discord webhook
                {% else %}
                    Add a Discord webhook
                {% endif %}
            </h2>
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            {{ include('discord_webhooks/_form.html.twig') }}
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            {{ include('discord_webhooks/_form_info.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
