{% extends 'base.html.twig' %}
{% block title %}Redirects{% endblock %}
{% block headline %}Redirects{% endblock %}
{% block body %}

    <div class="content-section">
        <div class="container">

            <table class="table table-sm table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Source</th>
                        <th>Target</th>
                        <th>StatusCode</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for redirect in redirects %}
                    <tr>
                        <td>{{ redirect.id }}</td>
                        <td>{{ redirect.source }}</td>
                        <td>{{ redirect.target }}</td>
                        <td>{{ redirect.statusCode }}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="{{ path('admin_redirect_show', {'id': redirect.id}) }}" class="btn btn-sm btn-primary"><i class="fa fa-eye"></i></a>
                                <a href="{{ path('admin_redirect_edit', {'id': redirect.id}) }}" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i></a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('admin_redirect_new') }}" class="btn btn-success"><i class="fa fa-plus"></i> Create new</a>

        </div>
    </div>

{% endblock %}
