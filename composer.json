{
  "name": "t3g/build-information-service",
  "description": "",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Susanne Moog",
      "email": "susanne.moog@typo3.com"
    }
  ],
  "require": {
    "ext-json": "*",
    "cpliakas/git-wrapper": "^2.1",
    "hassankhan/config": "0.10.0",
    "kbsali/redmine-api": "~1.0",
    "monolog/monolog": "^1.23",
    "psr/http-message": "^1",
    "psr/log": "^1",
    "symfony/console": "^4.1",
    "symfony/dotenv": "^4.1",
    "symfony/flex": "^1.1",
    "symfony/framework-bundle": "^4.1",
    "symfony/yaml": "^4.1",
    "vlucas/phpdotenv": "^2.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.12",
    "phpunit/phpunit": "^6",
    "roave/security-advisories": "dev-master",
    "symfony/maker-bundle": "^1.9"
  },
  "config": {
    "bin-dir": "bin/",
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.2.4"
    },
    "preferred-install": {
      "*": "dist"
    }
  },
  "scripts": {
    "t3g:test:php:unit": [
      "phpunit -c Build/UnitTests.xml --log-junit logs/phpunit.xml"
    ],
    "t3g:test": [
      "@t3g:test:php:unit"
    ],
    "t3g:cgl": [
      "php-cs-fixer fix --config Build/.php_cs.dist --format=junit > logs/php-cs-fixer.xml"
    ],
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    }
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "autoload": {
    "psr-4": {
      "T3G\\Intercept\\": "Classes/",
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "T3G\\Intercept\\Tests\\": "Tests/",
      "App\\Tests\\": "tests/"
    }
  },
  "extra": {
    "symfony": {
      "allow-contrib": false
    }
  }
}
