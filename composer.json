{
  "name": "t3g/build-information-service",
  "description": "",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Susanne Moog",
      "email": "susanne.moog@typo3.com"
    }
  ],
  "require": {
    "cpliakas/git-wrapper": "^1.7",
    "guzzlehttp/guzzle": "^6.2",
    "hassankhan/config": "0.10.0",
    "kbsali/redmine-api": "~1.0",
    "monolog/monolog": "^1.23",
    "psr/http-message": "^1",
    "psr/log": "^1",
    "vlucas/phpdotenv": "^2.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.12",
    "phpunit/phpunit": "^6",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "bin-dir": "bin/",
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.2.4"
    }
  },
  "scripts": {
    "t3g:test:php:unit": [
      "phpunit -c Build/UnitTests.xml --log-junit logs/phpunit.xml"
    ],
    "t3g:test": [
      "@t3g:test:php:unit"
    ],
    "t3g:cgl": [
      "php-cs-fixer fix --config Build/.php_cs.dist --format=junit > logs/php-cs-fixer.xml"
    ]
  },
  "autoload": {
    "psr-4": {
      "T3G\\Intercept\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "T3G\\Intercept\\Tests\\": "Tests/"
    }
  }
}
